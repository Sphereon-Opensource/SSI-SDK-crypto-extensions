{
  "packages": ["packages/*"],
  "version": "0.10.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): %s"
    }
  },
  "useWorkspaces": true,
  "forceLocal": true,
  "sort": true,
  "stream": false,
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
